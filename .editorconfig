root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 2
indent_size = 2
ij_continuation_indent_size = 4
indent_style = space
trim_trailing_whitespace = true

ij_any_blank_lines_after_imports = 2
ij_markdown_wrap_text_if_long = false

ij_any_line_comment_add_space = true
ij_any_line_comment_add_space_on_reformat = true
# ij_any_line_comment_at_first_column = true

ij_any_variable_annotation_wrap = on_every_item

[*.{java,kt}]
indent_size = 4
ij_continuation_indent_size = 8

[*.xml]
indent_style = tab

[*.{md,mkd,markdown}]
trim_trailing_whitespace = false
